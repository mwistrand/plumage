{
	"version": "1.7.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "dist/",
		"removeComments": false,
		"target": "es5",
		"experimentalDecorators": true,
		"sourceMap": true,
		"moduleResolution": "classic"
	},
	"filesGlob": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/tsd.d.ts"
	],
	"files": [
		"./src/interfaces.d.ts",
		"./src/parser.ts",
		"./src/Plumage.ts",
		"./src/vdom.ts",
		"./tests/unit/parser.ts",
		"./tests/unit/Plumage.ts",
		"./tests/unit/vdom.ts",
		"./typings/tsd.d.ts"
	]
}

